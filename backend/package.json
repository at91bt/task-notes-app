{
  "name": "notes-backend",
  "version": "0.0.1",
  "description": "Notes API Backend - Configurable Database Support",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start:memory": "cross-env DB_TYPE=memory npm run start:dev",
    "start:sqlite": "cross-env DB_TYPE=sqlite npm run start:dev",
    "start:postgres": "cross-env DB_TYPE=postgres npm run start:dev"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.2.0",
    "@nestjs/platform-express": "^10.2.0",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.0",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  }
}
